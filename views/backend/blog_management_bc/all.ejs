<%- include('../../layouts/dashboard/head') %>
    <%- include('../../layouts/dashboard/top_nav') %>
        <%- include('../../layouts/dashboard/main_content_top_html') %>
            <div id="layoutSidenav_content">
                <main class="pb-3">
                    <div class="container-fluid px-4">
                        <h5 class="mt-4">Static Navigation</h5>
                        <ol class="breadcrumb mb-4">
                            <li class="breadcrumb-item"><a href="/dashboard">Dashboard</a></li>
                            <li class="breadcrumb-item active">Static Navigation</li>
                        </ol>
                        <div>
                            <div class="card">
                                <div class="card-header">
                                    all data
                                </div>
                                <div class="card-body">
                                    <div class="table_top d-flex mb-3 justify-content-between flex-wrap gap-2">
                                        <div class="datatable-dropdown" >
                                            <label class="d-flex gap-2 align-items-center">
                                                <select class="form-select">
                                                    <option value="5">5</option>
                                                    <option value="10" selected="">10</option>
                                                    <option value="15">15</option>
                                                    <option value="20">20</option>
                                                    <option value="25">25</option>
                                                </select> 
                                                <div style="min-width: 300px;">
                                                    entries per page
                                                </div>
                                            </label>
                                        </div>
                                        <div class="datatable-search">
                                            <input class="form-control" placeholder="Search..." type="search" title="Search within table">
                                        </div>
                                    </div>

                                    <div class="table-responsive">
                                        <table class="table table-hover table-bordered">
                                            <thead class="text-center">
                                                <tr>
                                                    <th>
                                                        <input disabled type="checkbox" class="form-check">
                                                    </th>
                                                    <th>ID</th>
                                                    <th>Image</th>
                                                    <th>Title</th>
                                                    <th>View</th>
                                                    <th>Categories</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody class="text-center">
                                                <% for( let index = 0; index < 10; index++ ) { %>
                                                    <tr>
                                                        <td>
                                                            <input type="checkbox" class="form-check">
                                                        </td>
                                                        <td>
                                                            <%= parseInt(Math.random()*10000) %>
                                                        </td>
                                                        <td>
                                                            <img src="/images/1.jpg" height="40px" alt="">
                                                        </td>
                                                        <td>
                                                            Lorem ipsum dolor sit amet.
                                                        </td>
                                                        <td>
                                                            <%= parseInt(Math.random()*1000) %>
                                                        </td>
                                                        <td>
                                                            sports, magagine, internatinal
                                                        </td>
                                                        <td>
                                                            <div class="form-check form-switch d-inline-block">
                                                                <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
                                                                <label class="form-check-label" for="flexSwitchCheckChecked"></label>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="text-end">
                                                                <a href="#" class="btn btn-sm btn-primary mx-1">
                                                                    <i class="fas fa-eye"></i>
                                                                    Show
                                                                </a>
                                                                <a href="#" class="btn btn-sm btn-warning mx-1">
                                                                    <i class="fas fa-pencil"></i>
                                                                    Edit
                                                                </a>
                                                                <a href="#" class="btn btn-sm btn-danger mx-1">
                                                                    <i class="fas fa-trash"></i>
                                                                    Delete
                                                                </a>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                <% } %>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex justify-content-between">
                                        <div class="left">
                                            Showing 1 to 10 of 57 entries
                                        </div>
                                        <div class="right">
                                            <nav aria-label="Page navigation example">
                                                <ul class="pagination">
                                                    <li class="page-item">
                                                        <a class="page-link" href="#" aria-label="Previous">
                                                            <span aria-hidden="true">&laquo;</span>
                                                        </a>
                                                    </li>
                                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                                    <li class="page-item">
                                                        <a class="page-link" href="#" aria-label="Next">
                                                            <span aria-hidden="true">&raquo;</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </nav>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
            <%- include('../../layouts/dashboard/main_content_bottom_html') %>